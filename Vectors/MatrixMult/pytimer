#!/usr/bin/python
import sys, time, os, subprocess

dimension = sys.argv[1] # pass in an integer to this script

outDir = "output/"
jreal  = "./bin/jexe.ijs"
jnada  = "./bin/jnothing.ijs"
creal  = "./bin/cexe.out"
cnada  = "./bin/cnothing.out"

def timer(cmd):
    """ Measure the time it takes to invoke the given command
    using a shell subprocess. """
    start = end = 0
    start = time.time()
    myProcess = subprocess.Popen(cmd, shell=True)
    myProcess.wait()
    end = time.time()
    return end - start

def av(cmd, iters = 5):
    avg = 0
    for i in range(iters):
        avg += timer(cmd)
    return avg / iters

def columnBuilder(cmd):
    output = ""
    i = 0
    n = int(dimension)
    while i <= n:
        stri = str(i)
        output += stri + ", " + str(av(cmd + " " + stri)) + "\n"
        i += int(n / 10)
    return output

def winner(cmd1, cmd2):
    t1 = timer(cmd1 + " " + dimension)
    t2 = timer(cmd2 + " " + dimension)
    if t1 == t2:
        return "tie!"
    else:
        return cmd1 + "(" + str(t1) + ") was " + str(t2/t1) + " times faster than " + cmd2 + "(" + str(t2) + ")"

def writer(scriptName, cmd):
    f = open(outDir + scriptName + ".csv",'w')
    f.write(scriptName + "\n")
    f.write(columnBuilder(cmd))
    f.close()

writer("jOutput", jreal)
writer("cppOutput", creal)

print "Overhead from calling the program: "
print "J: " + str(timer(jnada))
print "C++: " + str(timer(cnada))

print "Results of " + str(dimension) + "th run: "
print winner(jreal, creal)
